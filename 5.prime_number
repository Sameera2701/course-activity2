# c) is emirp (prime spelled backwards)
def isEmirp(n):
flag = False
rev=0
num=n
while (num > 0):  
rem = num % 10  
rev = (rev * 10) + rem  
num = num // 10  
# print('n=',n,'rev=',rev)
if (isPrime(n)==True and isPrime(rev)==True):
return True
else: return False
