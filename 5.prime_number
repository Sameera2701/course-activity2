# b) is palindrome prime check
def isPalindromePrime(n):
flag = False
rev=0
num=n
while (num > 0):  
rem = num % 10  
rev = (rev * 10) + rem  
num = num // 10  
#print('n=',n,'rev=',rev)
if n == rev: flag=True
if (n==1):
return False
elif (n==2):
return True;
else:
for x in range(2,n):
if(n % x == 0):
return False
if flag == True: return True     
else: return False
